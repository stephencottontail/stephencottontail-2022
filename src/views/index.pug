html
	head
		meta(name='viewport' content='width=device-width, initial-scale=1')
		title HTMX + Express
	body
		h1 Hello World!
		div#outer
			button#click(onClick='setTitle()' data-hx-get='/abc' data-hx-push-url="true" data-hx-target='#inner' data-hx-swap='beforeend' data-hx-vals='js:{count: countPanes()}') Get Started!
			div#inner
		script(type='text/javascript' src='https://unpkg.com/htmx.org@1.8.4')
		script(type='text/javascript').
			function setTitle() {
				var count = countPanes();

				document.title = 'There are ' + ( Number( count ) + 1 ) + ' panes';
			}

			function countPanes() {
				return document.querySelectorAll('.pane').length;
			}
